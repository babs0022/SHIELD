{
  "version": 2,
  "builds": [
    {
      "src": "frontend/next.config.mjs",
      "use": "@vercel/next"
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/notifications/webhook",
      "destination": "/backend"
    },
    {
      "source": "/:path*",
      "destination": "/frontend/:path*"
    }
  ]
}
